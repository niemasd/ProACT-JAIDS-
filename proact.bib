doi = {10.1097/QAI.0000000000001856},
file = {:C$\backslash$:/Users/niema/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Oster et al. - 2018 - Identifying Clusters of Recent and Rapid HIV Transmission Through Analysis of Molecular Surveillance Data.pdf:pdf},
journal = {Journal of Acquired Immune Deficiency Syndromes},
keywords = {HIV,cluster (J Acquir Immune Defic Syndr 2018;79:543-5,epidemi-ology,molecular,phylogenetic,transmission},
number = {5},
