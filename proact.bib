doi = {10.1371/journal.pone.0213366},
file = {:C$\backslash$:/Users/niema/AppData/Local/Mendeley Ltd./Mendeley Desktop/Downloaded/Villandr{\'{e}} et al. - 2019 - Assessing the role of transmission chains in the spread of HIV-1 among men who have sex with men in Quebec, Ca.pdf:pdf},
journal = {PLoS ONE},
month = {mar},
number = {3},
pages = {e0213366},
publisher = {Public Library of Science},
title = {{Assessing the role of transmission chains in the spread of HIV-1 among men who have sex with men in Quebec, Canada}},
volume = {14},
year = {2019}
}
@article{Oster2018,
